---
import Container from './Container.astro';
---

<footer id='Footer' class='py-10 shadow-2xl bg-[#fff]'>
  <Container>
    <div class='divide-y divide-solid' data-aos='fade-up'>
      <div class='grid grid-cols-2 gap-12 mb-10 max-lg:grid-cols-1'>
        <div>
          <h6 class='mb-6 font-sans text-3xl font-semibold text-black/90'>Contact Us</h6>
          <form>
            <div>
              <div>
                <div>
                  <label for='name' class='block mb-2 text-sm font-medium text-black/90'>Name *</label>
                  <input
                    type='text'
                    name='name'
                    placeholder='Jose Jaramillo'
                    id='name'
                    class='block w-full p-2 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500'
                    required
                  />
                </div>
              </div>
              <div class='mt-6'>
                <div>
                  <label for='email' class='block mb-2 text-sm font-medium text-black/90'>Email *</label>
                  <input
                    type='email'
                    id='email'
                    name='email'
                    placeholder='example@email.com'
                    class='block w-full p-2 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500'
                    required
                  />
                </div>
              </div>
              <div class='mt-6'>
                <div>
                  <label for='phone' class='block mb-2 text-sm font-medium text-black/90'>Subject *</label>
                  <input
                    type='text'
                    id='phone'
                    name='phone'
                    placeholder='Subject'
                    class='block w-full p-2 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500'
                    required
                  />
                </div>
              </div>
              <div class='mt-6'>
                <div>
                  <label for='message' class='block mb-2 text-sm font-medium text-black/90'>Message</label>
                  <textarea
                    id='message'
                    name='message'
                    placeholder='Hello there...'
                    class='block w-full p-2 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500 max-h-28'
                  ></textarea>
                </div>
                <button
                  class='mt-8 w-full text-white bg-gradient-to-br from-black/60 to-black hover:bg-gray-200 focus:ring-4 focus:outline-none focus:ring-gray-600 rounded-lg text-base px-5 py-2.5 text-center font-semibold font-sans transition transition-400'
                  type='submit'
                >
                  Send Message
                </button>
              </div>
            </div>
          </form>
        </div>
        <div class=''>
          <iframe
            src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3504.619916503339!2d-81.37918372453417!3d28.55114197570926!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88e77af0909df5c1%3A0x832e9b62285ab08a!2s601%20N%20Magnolia%20Ave%20%23200%2C%20Orlando%2C%20FL%2032801%2C%20EE.%20UU.!5e0!3m2!1ses-419!2sco!4v1704655783613!5m2!1ses-419!2sco'
            width='100%'
            height='100%'
            style='border:0;'
            allowfullscreen=''
            loading='lazy'
            referrerpolicy='no-referrer-when-downgrade'></iframe>
        </div>
      </div>

      <div class='grid grid-cols-2 gap-12 pt-10 max-lg:grid-cols-1'>
        <div class='flex gap-6 max-lg:justify-center'>
          <img
            src='https://res.cloudinary.com/dprlq5xzn/image/upload/v1705553232/ZION_TITLE_cqnc3i.png'
            class='h-12'
            alt='Logo'
          />
          <div class='font-sans font-light text-black/90'>
            <p>Address: 601 N Magnolia Ave, Orlando, FL 32801</p>
            <p>Phone: +1 (407) 674-2040</p>
            <br />

            <p>&copy; 2024 Zion Title | All rights reserved</p>
          </div>
        </div>
        <div>
          <div class='flex flex-col flex-wrap gap-4'>
            <span class='font-sans text-3xl font-semibold text-center text-black/90 lg:text-end'
              >Subscribe to our news.</span
            >
            <div class='flex flex-1 border-2 border-black/80'>
              <input
                type='email'
                name='name'
                placeholder='Your email address'
                id='name'
                class='flex-1 block p-2 text-xs text-gray-900 bg-gray-50 focus:ring-blue-500 focus:border-blue-500'
                required
              />
              <button
                class='px-4 font-sans text-base font-semibold text-center transition bg-black/80 text-white/90 bg-blackhover:bg-gray-200 focus:ring-4 focus:outline-none focus:ring-gray-600 transition-400'
                type='submit'
              >
                Get Starded
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</footer>
